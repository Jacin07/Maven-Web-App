pipeline {
    agent any
    stages {

        stage('Clone Code') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/Jacin07/Maven-Web-App.git'
            }
        }

        stage('Build WAR') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Deploy to Tomcat') {
            steps {
                sh '''
                    sudo cp target/*.war /opt/tomcat/webapps/
                    sudo /opt/tomcat/bin/shutdown.sh || true
                    sleep 4
                    sudo /opt/tomcat/bin/startup.sh
                '''
            }
        }
    }
}
